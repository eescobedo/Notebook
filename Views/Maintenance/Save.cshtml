@model ModelContact
@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Create Contact
    </div>
    <div class="card-body">
        <form asp-action="Save" asp-controller="Maintenance" method="post">
            <div class="mb-3">
				<label class="form-label">Name</label>
				<input asp-for="Name" type="text" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
				<label class="form-label">Phone</label>
				<input asp-for="Phone" type="text" class="form-control" placeholder="Phone">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="ListContacts" asp-controller="Maintenance" class="btn btn-warning">Return to list</a>
        </form>
	</div>
		
		
</div>